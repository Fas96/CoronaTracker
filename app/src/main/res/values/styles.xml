<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="TextStyle.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>